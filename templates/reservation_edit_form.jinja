{% extends 'base.jinja' %}

{% block title %}Edit Reservation {% endblock %}

{% block content %}

  <form action="/reservation/{{reservation.id}}/edit" method="POST">
    <h1>Edit Reservation</h1>

    <div class="mb-3">
      <label for="numGuests">Number of Guests: </label>
      <input id="numGuests"
             class="form-control"
             name="numGuests"
             value="{{ reservation.numGuests }}">
    </div>
    <div class="mb-3">
      <label for="startAt">Start At</label>
      <input id="startAt"
             class="form-control"
             name="startAt"
             value="{{ reservation.startAt  }}">
    </div>
    <div class="mb-3">
      <label for="notes">Notes:</label>
      <input id="notes"
             class="form-control"
             name="notes"
             value="{{ customer.notes }}">
    </div>

    <button class="btn btn-primary">Edit</button>
    <a href="/{{ customer.id }}/" class="btn btn-danger">Cancel</a>
  </form>

{% endblock %}